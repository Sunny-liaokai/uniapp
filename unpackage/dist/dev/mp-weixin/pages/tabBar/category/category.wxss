  -webkit-align-items: center;
          align-items: center;
}
.content .category-list .scrollLeft .row .text {
  width: 100%;
  height: 100%;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 28rpx;
  color: #3c3c3c;
  text-align: center;
}
.content .category-list .scrollLeft .row .text .block {
  position: absolute;
  width: 0rpx;
  left: 0;
}
.content .category-list .scrollLeft .active {
  background-color: #fff;
}
.content .category-list .scrollLeft .active .text {
  font-size: 30rpx;
  font-weight: 600;
  color: #2d2d2d;
}
.content .category-list .scrollLeft .active .text .block {
  width: 10rpx;
  height: 30rpx;
  top: 35rpx;
  background-color: #f06c7a;
}
