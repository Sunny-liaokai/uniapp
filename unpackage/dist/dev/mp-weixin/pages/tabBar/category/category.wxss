  width: 100%;
}
.content .category-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.content .category-list .scrollLeft {
  width: 24%;
  background-color: #f2f2f2;
}
.content .category-list .scrollLeft .row {
  width: 100%;
  height: 90rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  color: #3c3c3c;
